<%= form_for [:admin, @currency], html: {class: "form-horizontal"} do |f| %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t ".requirement" %></th>
        <th><%= t ".field" %></th>
        <th><%= t ".value" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= requirement_label @currency, :name %></td>
        <td><%= f.label :name %></td>
        <td>
          <%= f.text_field :name, class: "input-xlarge", required: true %>
          <span class="validation_error_message"><%= f.full_error_messages_for("name").first %></span>
        </td>
      </tr>
      <tr>
        <td><%= requirement_label @currency, :name_en %></td>
        <td><%= f.label :name_en %></td>
        <td>
          <%= f.text_area :name_en, class: "input-xlarge", required: true %>
          <span class="validation_error_message"><%= f.full_error_messages_for("name").first %></span>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <%= f.submit class: %w(btn btn-primary) %>
  </div>
<% end %>

<%= form_for [:admin, @gearbox], html: {class: "form-horizontal"} do |f| %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t ".requirement" %></th>
        <th><%= t ".field" %></th>
        <th><%= t ".value" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= requirement_label @gearbox, :gearbox_type %></td>
        <td><%= f.label :gearbox_type %></td>
        <td>
          <%= f.text_field :gearbox_type, class: "input-xlarge", required: true %>
          <span class="validation_error_message"><%= f.full_error_messages_for("gearbox_type").first %></span>
        </td>
      </tr>
      <tr>
        <td><%= requirement_label @gearbox, :detail %></td>
        <td><%= f.label :detail %></td>
        <td>
          <%= f.text_area :detail, class: "input-xlarge" %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <%= f.submit class: %w(btn btn-primary) %>
  </div>
<% end %>

<section id="gearboxes-show">
  <h1 class="page-title"><%= t ".title", gearbox_type: @gearbox.gearbox_type %></h1>
  <div class="actions">
    <%= link_to t(".edit"), edit_admin_gearbox_path(@gearbox), class: :btn %>
    <%= link_to t(".back"), admin_gearboxes_path, class: :btn %>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t ".requirement" %></th>
        <th><%= t ".field" %></th>
        <th><%= t ".value" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= requirement_label @gearbox, :gearbox_type %></td>
        <td><%= Gearbox.h :gearbox_type %></td>
        <td><%= @gearbox.gearbox_type %></td>
      </tr>
      <tr>
        <td><%= requirement_label @gearbox, :detail %></td>
        <td><%= Gearbox.h :detail %></td>
        <td><%= @gearbox.detail %></td>
      </tr>
    </tbody>
  </table>
</section>

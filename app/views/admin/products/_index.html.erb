<% @products.each do |product| %>
<tr>
  <td><%= product.name %></td>
  <td><%= product.content %></td>
  <td><%= link_to "Edit", edit_admin_product_path(product), remote: true, class: "btn" %></td>
  <td><%= link_to "Delete", admin_product_path(product), method: :delete, remote: true, class: "btn btn-danger" %></td>
</tr>
<% end %>